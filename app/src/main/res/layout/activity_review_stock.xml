<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.baosystems.icrc.psm.ui.reviewstock.ReviewStockViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.baosystems.icrc.psm.ui.managestock.ManageStockActivity">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <TextView
                android:id="@+id/tvToolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-medium"
                tools:text="@string/app_name"
                android:textAllCaps="true"
                android:textAppearance="?attr/titleTextAppearance"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/toolbar_text_size" />
        </com.google.android.material.appbar.MaterialToolbar>

        <!-- Content Area -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content_area"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/content_area_lr_margin"
            android:layout_marginRight="@dimen/content_area_lr_margin"
            android:layout_marginTop="32dp"
            app:layout_constraintBottom_toTopOf="@+id/stock_items_footer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/choices_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/choices_top_margin"
                android:background="@color/light_grey"
                android:paddingStart="@dimen/choices_padding_left"
                android:paddingTop="@dimen/choices_padding_top"
                android:paddingEnd="@dimen/choices_padding_right"
                android:paddingBottom="@dimen/choices_padding_bottom"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/facilityTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/facility_icon_padding"
                    app:drawableLeftCompat="@drawable/home"
                    app:layout_constraintEnd_toStartOf="@+id/transactionDateTextView"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@{viewModel.transaction.facility.displayName}"
                    tools:text="AFGOYE MHT1 Clinic OPD/MCH" />

                <TextView
                    android:id="@+id/transactionDateTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/trans_date_icon_padding"
                    app:drawableLeftCompat="@drawable/calendar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/facilityTextView"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@{viewModel.transaction.transactionDate}"
                    tools:text="2021-08-09" />

                <TextView
                    android:id="@+id/distributedToTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16"
                    android:drawablePadding="@dimen/distribution_icon_padding"
                    android:gravity="center"
                    app:drawableLeftCompat="@drawable/destination"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/facilityTextView"
                    app:distributedTo="@{viewModel.transaction.distributedTo.displayName}"
                    tools:text="Diagnostic imaging (X-Ray)" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/searchFieldLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_marginEnd="@dimen/margin_16"
                app:startIconDrawable="@drawable/ic_search_24"
                app:startIconTint="@color/input_field_icon_color_tint"
                app:startIconContentDescription="@string/content_description_search"
                app:endIconMode="clear_text"
                app:endIconDrawable="@drawable/ic_clear_24"
                app:layout_constraintEnd_toStartOf="@+id/scan_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/choices_container"
                app:placeholderText="@string/search"
                app:layout_constraintHorizontal_weight="7">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/searchInputField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/scan_button"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                android:text="@string/scan_barcode"
                app:icon="@drawable/barcode"
                app:iconGravity="end"
                app:cornerRadius="@dimen/scan_button_corner_radius"
                app:layout_constraintStart_toEndOf="@id/searchFieldLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/choices_container"
                app:layout_constraintHorizontal_weight="3" />

            <!-- Table header -->
            <include layout="@layout/stock_table_header"
                android:id="@+id/stockEntriesTableHeader" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/stock_items_list"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clickable="true"
                android:focusable="true"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/stockEntriesTableHeader"
                tools:listitem="@layout/review_stock_item_entry" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Footer -->
        <include
            android:id="@+id/stock_items_footer"
            layout="@layout/footer"
            app:lastSyncDate="@{viewModel.lastSyncDate}" />

        <!-- Floating Button -->
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fabCommitStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/fab_margin"
            android:layout_marginBottom="@dimen/fab_margin"
            android:paddingStart="@dimen/fab_lr_padding"
            android:paddingEnd="@dimen/fab_lr_padding"
            app:cornerRadius="@dimen/fab_corner_radius"
            android:text="@string/transaction_label"
            app:icon="@drawable/ic_commit"
            app:iconGravity="textStart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>