<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <FrameLayout
        android:id="@+id/itemNameColumn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:background="@color/light_grey">

        <TextView
            android:id="@+id/itemNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="@dimen/stock_item_margin"
            android:textColor="@color/table_text_color"
            tools:text="DORAPARA5T - PARACETAMOL (acetaminophen), 500 mg, tab." />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/stockOnHandColumn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:background="@color/gray_200">

        <TextView
            android:id="@+id/stockOnHandValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/stock_item_margin"
            tools:ignore="RtlCompat"
            tools:text="537"
            android:textColor="@color/table_text_color"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/qtyColumn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/itemQtyTextField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/stock_item_margin"
            android:layout_marginBottom="@dimen/stock_item_margin"
            app:boxCornerRadiusTopStart="4dp"
            app:boxCornerRadiusTopEnd="4dp"
            app:boxCornerRadiusBottomStart="4dp"
            app:boxCornerRadiusBottomEnd="4dp"
            android:layout_gravity="center"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            tools:text="20">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/table_text_color" />
        </com.google.android.material.textfield.TextInputLayout>

