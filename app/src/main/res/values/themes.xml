<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PharmacyStockManagement" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/gray_900</item>
        <item name="android:colorControlNormal">@color/white</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.PharmacyStockManagement.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PharmacyStockManagement.Distribution" parent="Theme.PharmacyStockManagement">
        <item name="android:statusBarColor" tools:targetApi="l">@color/distribution_color</item>
    </style>

    <style name="Theme.PharmacyStockManagement.Discard" parent="Theme.PharmacyStockManagement">
        <item name="android:statusBarColor" tools:targetApi="l">@color/discard_color</item>
    </style>

    <style name="Theme.PharmacyStockManagement.Correction" parent="Theme.PharmacyStockManagement">
        <item name="android:statusBarColor" tools:targetApi="l">@color/correction_color</item>
    </style>

    <style name="Theme.PharmacyStockManagement.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PharmacyStockManagement.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.PharmacyStockManagement.TextButton" parent="Widget.MaterialComponents.Button.TextButton">

    </style>

